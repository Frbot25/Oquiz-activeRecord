<!doctype html>
<html lang="fr">
    <head>
        <%- include('./partials/head'); %>
    </head>


<%- include('./partials/header'); %>
<main class="container">
<main class="container">
    
    <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
        <h2 class="h1 display-4"><%= quizInfo.title %></h2>
        <p class="lead"><%= quizInfo.description %></p>
        <p class="font-weight-bold">par <%= quizInfo.author %></p>
        <p class="lead"><%= quizInfo.nbQuestion %> questions</p>
    </div>

    <div class="row">
        <% for( let tag of quizInfo.tags ) { %>

        <div class="col-3 p-4 text-center">
            <a class="btn btn-block btn-lg tag tag--animaux" href="/tag/<%= quizInfo.tags[tag] %>">
                <%= tag %>
            </a>
        </div>
        <% } %>

    </div>

    <div class="row">
        <form method="post" action="">
     <% quiz.forEach(question => { %>
        
        <div class="col-12">
            <label class="badge level level--débutant"><%= question.name %></label>
            <h4>
                <%= question.question %>
            </h4>
            <ul>
                <% for( let answer of question.answers ) { %>
                
                    <%= %>
                    <div>
                        <input type="radio" id="huey" name="<%= question.question_id %>" value="<%= answer %>"
                               >
                        <label for="huey"><%= answer %></label>
                      </div>
                
                
                <% } %>
               
            </ul>
        </div>
        <% }) %>

    </div>
    <button>Valider les réponses</button>
</form>
</main>
<footer class="pt-4 my-md-5 pt-md-5 border-top">
    <%- include('./partials/footer'); %>
</footer>
</footer>
</body>

</html>