<!doctype html>
<html lang="fr">
    <head>
        <%- include('./partials/head'); %>
    </head>


<%- include('./partials/header'); %>
<main class="container">

    <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
        <h2 class="h1 display-4"><%= tags[0].tag_name %></h2>
      </div>

      <div class="card-deck row mb-3 text-center">
        <% for( let tag in tags ){ %>
        <div class="col-4 d-flex flex-column">
            <div class="card mb-4 shadow-sm d-flex flex-column">
                <div class="card-header">
                    <h3 class="h4 my-0 font-weight-normal"><%= tags[tag].title %></h3>
                </div>
                <div class="card-body d-flex flex-column justify-content-between">
                    <h4 class="h1 card-title pricing-card-title"><%= tags[tag].quiz_description %></h4>
                    <ul class="list-unstyled mt-3 mb-4">
                        <li><%= tags[tag].firstname %> <%= tags[tag].lastname %></li>
                    </ul>
                    <a href="/quiz/<%= tags[tag].quiz_id %>" class="btn btn-lg btn-block btn-primary text-white">Jouer</a>
                </div>
            </div>
        </div>
        <% } %>

    </div>

</main>
<footer class="pt-4 my-md-5 pt-md-5 border-top">
    <%- include('./partials/footer'); %>
</footer>
</body>

</html>